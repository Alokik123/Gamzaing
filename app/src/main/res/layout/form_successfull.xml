<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbarSize="0dp"
    android:background="@color/white"> <!-- Set background color here -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            app:cardCornerRadius="0dp"
            app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:padding="16dp"
            android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:src="@drawable/back_button" />
            <TextView
                android:id="@+id/apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
              android:layout_marginStart="20dp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_light"
                android:text="Form Successful Details"
                android:textColor="@color/black"
                android:textSize="18dp" />
        </LinearLayout>
        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/yay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/yay"
            android:layout_marginTop="80dp" />
        <TextView
            android:id="@+id/ty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="THANK YOU!"
            android:layout_below="@+id/yay"
            android:textAlignment="center"
            android:textSize="20dp"
            android:fontFamily="@font/poppins_black"
            android:textColor="#FF2A17"
            android:layout_marginTop="40dp"/>
        <TextView
            android:id="@+id/app_sub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thanks for applying for the internship"
            android:layout_below="@+id/ty"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_light"            android:textColor="@color/black"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/app_sub2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your application has been submitted"
            android:layout_below="@+id/app_sub"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_light"            android:textColor="@color/black"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/success"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Successfully"
            android:layout_below="@+id/app_sub2"
            android:textAlignment="center"
            android:textSize="15dp"
            android:fontFamily="@font/poppins_black"
            android:textColor="#FF2A17"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:id="@+id/i9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="590dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/share" />


        <androidx.cardview.widget.CardView
            android:layout_width="395dp"
            android:layout_height="138dp"
            android:layout_below="@+id/i9"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#FFe4e1"
            android:elevation="10dp"
            android:padding="16dp"
            app:cardCornerRadius="10dp">




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/t3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Connect with us"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="18dp"
                    android:layout_marginTop="16dp"
                    android:textAlignment="center" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/i12"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="8dp"
                        android:src="@drawable/whatsapp" />

                    <ImageView
                        android:id="@+id/i13"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="8dp"
                        android:src="@drawable/instagram" />

                    <ImageView
                        android:id="@+id/i14"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="8dp"
                        android:src="@drawable/facebook_1" />

                    <ImageView
                        android:id="@+id/i15"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="8dp"
                        android:src="@drawable/linkedin_1" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>



        <TextView
            android:id="@+id/t1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Checkout UI/UX &amp; Web designer Articles"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_light"            android:textAlignment="center"
            android:layout_marginTop="850dp"
            android:textSize="20sp"/>
        <ImageView
            android:id="@+id/i16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:layout_below="@+id/t1"
            android:layout_marginTop="20dp"
            android:src="@drawable/checkout1"/>


    </RelativeLayout>

</ScrollView>
