<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_dialog_top"
    android:padding="20dp"
    android:gravity="center_horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/refere_svg"
        android:layout_gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do you have an invite code to get a flat 10% waiver in fee?"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_medium" />


    <TextView
        android:id="@+id/CouponCodeBottomSheetErrorMessage"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Referral code failed"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_medium"
        android:textSize="14sp"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        android:layout_marginTop="10dp"
        android:id="@+id/CouponCodeBottomSheetReferalCodeCard"
        app:cardElevation="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp">


        <EditText
            android:id="@+id/CouponCodeBottomSheetReferalCode"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Enter Referral Code"
            android:background="@color/transparent"
            android:paddingStart="10dp"
            android:fontFamily="@font/poppins_light"
            android:textSize="20sp"/>
    </com.google.android.material.card.MaterialCardView>

    <Button
        android:id="@+id/CouponCodeBottomSheetbtnApply"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        style="@style/AppButtonStyle"
        android:text="Apply"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_light" />

    <TextView
        android:id="@+id/CouponCodeBottomSheetbtnNoCoupnCode"
        android:layout_gravity="left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I don't have a coupon code"
        android:textSize="15sp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_medium"/>

    <TextView
        android:id="@+id/error_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Referral code failed"
        android:textColor="@android:color/holo_red_dark"
        android:visibility="gone"
        android:layout_gravity="start"
        android:textSize="10dp"
        android:drawableStart="@drawable/ic_trashcan"
        android:fontFamily="@font/poppins_light" />

    <TextView
        android:id="@+id/success_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Referral code success"
        android:textColor="@android:color/holo_green_dark"
        android:visibility="gone"
        android:layout_gravity="start"
        android:textSize="10dp"
        android:drawableStart="@drawable/ic_check"
        android:fontFamily="@font/poppins_light" />

</LinearLayout>
