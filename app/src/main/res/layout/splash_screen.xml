<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/i1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/gamazinglogo"
            android:layout_marginLeft="97dp"
            android:layout_marginVertical="62dp" />

        <TextView
            android:id="@+id/app_web_dev_studio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="117dp"
            android:layout_marginTop="160dp"
            android:fontFamily="@font/poppins_black"
            android:textColor="@color/black"
            android:text="APP &amp; WEB DEVELOPMENT STUDIO"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/logo1"
            android:layout_width="144dp"
            android:layout_height="180dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="107dp"
            android:layout_marginTop="410dp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/ui_ux"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="117dp"
            android:layout_marginTop="580dp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_black"
            android:text="UI/UX &amp;"
            android:textSize="22sp"
            android:gravity="center"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/web_designer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="117dp"
            android:layout_below="@id/ui_ux"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_black"
            android:text="WEB DESIGNER"
            android:textSize="22sp"
            android:gravity="center"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/training_internship"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/web_designer"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_black"
            android:gravity="center"
            android:text="TRAINING &amp; INTERNSHIP"
            android:textSize="22sp" />
    </RelativeLayout>

</LinearLayout>
