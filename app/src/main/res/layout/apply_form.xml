<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/back_button1111"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:layout_marginLeft="28dp"
                        android:src="@drawable/back_button" />

                    <TextView
                        android:id="@+id/apply"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="28dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_light"
                        android:text="Apply for UI/UX Training"
                        android:textColor="@color/black"
                        android:textSize="18dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingLeft="8dp"
                android:text="Training Apply Form"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_black"
                android:textColor="@color/black"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <!-- Name Heading -->
                    <TextView
                        android:id="@+id/name_heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:padding="8dp"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/black"
                        android:layout_marginBottom="8dp"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_background"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="8dp">

                        <EditText
                            android:id="@+id/firstname_input"
                            android:layout_width="match_parent"
                            android:layout_height="57dp"
                            android:fontFamily="@font/poppins_medium"
                            android:hint="Enter your First name"
                            android:padding="8dp"
                            android:background="@android:color/transparent"/>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/lastname_heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Last Name"
                        android:textSize="15sp"
                        android:layout_margin="8dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_light"
                        android:textColor="@color/black"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="8dp"/>

                    <!-- Last Name EditText in CardView -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_background"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="8dp">

                        <EditText
                            android:id="@+id/lastname_input"
                            android:layout_width="match_parent"
                            android:layout_height="57dp"
                            android:hint="Enter your Last name"
                            android:padding="8dp"
                            android:fontFamily="@font/poppins_light"

                            android:background="@android:color/transparent"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Container for Educational Background -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/edu_heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Educational Background"
                        android:textSize="15sp"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/black"
                        android:layout_marginTop="20dp"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:padding="8dp"
                    android:layout_marginBottom="8dp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btech"
                        android:layout_width="100dp"
                        android:layout_height="57dp"
                        android:layout_weight="1"
                        android:text="B.tech"
                        android:layout_marginTop="50dp"
                        android:layout_marginLeft="12dp"
                        android:background="@drawable/button_background"
                        android:textColor="@color/grey"
                        style="@style/Widget.AppCompat.Button.Borderless"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/MTech"
                        android:layout_width="100dp"
                        android:layout_height="57dp"
                        android:layout_weight="1"
                        android:layout_marginTop="50dp"
                        android:layout_marginLeft="135dp"
                        android:text="M.tech"
                        android:background="@drawable/button_background"
                        android:textColor="@color/grey"
                        style="@style/Widget.AppCompat.Button.Borderless"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/Engg_diploma"
                        android:layout_width="100dp"
                        android:layout_height="57dp"
                        android:layout_weight="1"
                        android:text="Engg Diploma"
                        android:layout_marginTop="50dp"
                        android:layout_marginLeft="260dp"
                        android:background="@drawable/button_background"
                        android:textColor="@color/grey"
                        style="@style/Widget.AppCompat.Button.Borderless"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/Commerce"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="100dp"
                        android:layout_height="57dp"
                        android:layout_weight="1"
                        android:layout_below="@+id/btech"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="12dp"
                        android:background="@drawable/button_background"
                        android:text="Commerce"
                        android:textColor="@color/grey" />
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/others"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="100dp"
                        android:layout_height="57dp"
                        android:layout_weight="1"
                        android:layout_marginTop="130dp"
                        android:layout_marginLeft="135dp"
                        android:background="@drawable/button_background"
                        android:text="others"
                        android:textColor="@color/grey" />


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/status_heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current Status"
                        android:textSize="15sp"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/black"
                        android:layout_marginTop="210dp"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:padding="8dp"
                    android:layout_marginBottom="8dp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/student"
                        android:layout_width="100dp"
                        android:layout_height="57dp"
                        android:layout_weight="1"
                        android:text="Student"
                        android:layout_marginTop="240dp"
                        android:layout_marginLeft="12dp"
                        android:background="@drawable/button_background"
                        android:textColor="@color/grey"
                        style="@style/Widget.AppCompat.Button.Borderless"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/Fresher"
                        android:layout_width="100dp"
                        android:layout_height="57dp"
                        android:layout_weight="1"
                        android:layout_marginTop="240dp"
                        android:layout_marginLeft="135dp"
                        android:text="Experience"
                        android:background="@drawable/button_background"
                        android:textColor="@color/grey"
                        style="@style/Widget.AppCompat.Button.Borderless"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/Training_Experience"
                        android:layout_width="100dp"
                        android:layout_height="57dp"
                        android:layout_weight="1"
                        android:text="Training Experience"
                        android:layout_marginTop="240dp"
                        android:layout_marginLeft="260dp"
                        android:background="@drawable/button_background"
                        android:textColor="@color/grey"
                        style="@style/Widget.AppCompat.Button.Borderless"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/Working_Profesional"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="100dp"
                        android:layout_height="57dp"
                        android:layout_weight="1"
                        android:layout_below="@+id/student"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="12dp"
                        android:background="@drawable/button_background"
                        android:text="Working"
                        android:textColor="@color/grey"
                        />


                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- CardView for "If Student then" Section -->
            <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
            android:padding="16dp">


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="If Student then:"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:paddingTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/black"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="College Name"
                        android:textSize="15sp"
                        android:layout_marginBottom="8dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/black"
                        android:layout_marginTop="-6dp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_background"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="8dp">

                        <EditText
                            android:id="@+id/name_input"
                            android:layout_width="match_parent"
                            android:layout_height="57dp"
                            android:fontFamily="@font/poppins_light"
                            android:hint="Enter your First name"
                            android:background="@android:color/transparent"
                            android:padding="8dp"/>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/ist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current Year"
                        android:textSize="15sp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="8dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/black"
                        android:layout_marginTop="16dp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_background"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="8dp">

                        <EditText
                            android:id="@+id/sur_name"
                            android:layout_width="match_parent"
                            android:layout_height="57dp"
                            android:hint="Enter your Last name"
                            android:padding="8dp"
                            android:fontFamily="@font/poppins_light"
                            android:background="@android:color/transparent"/>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:padding="16dp">

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_background"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="If Fresher or Training Experience then:"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginLeft="10sp"
                    android:paddingTop="10dp"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:id="@+id/name_head"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="College Name"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_background"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp">

                    <EditText
                        android:id="@+id/n_input"
                        android:layout_width="match_parent"
                        android:layout_height="57dp"
                        android:hint="Enter your First name"
                        android:fontFamily="@font/poppins_light"
                        android:background="@android:color/transparent"
                        android:padding="8dp"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/last_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Year Of Completion "
                    android:textSize="15sp"
                    android:layout_marginBottom="8dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/black"
                    android:layout_marginTop="16dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_background"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp">

                    <EditText
                        android:id="@+id/last_input"
                        android:layout_width="match_parent"
                        android:layout_height="57dp"
                        android:hint="Enter your Year Of Completion"
                        android:fontFamily="@font/poppins_light"
                        android:padding="12dp"
                        android:background="@android:color/transparent"/>
                </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="If Working professional then:"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:id="@+id/company_name_heading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Company Name"
                        android:textSize="15sp"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/black"
                        android:layout_marginBottom="8dp"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_background"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="8dp">

                        <EditText
                            android:id="@+id/company_name_input"
                            android:layout_width="match_parent"
                            android:layout_height="57dp"
                            android:hint="Enter your Company name"
                            android:fontFamily="@font/poppins_light"
                            android:background="@android:color/transparent"
                            android:padding="8dp"/>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/work_experience_heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Years of Work Experience"
                        android:textSize="15sp"
                        android:layout_marginBottom="8dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/black"
                        android:layout_marginTop="16dp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_background"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="8dp">

                        <EditText
                            android:id="@+id/years_of_experience_input"
                            android:layout_width="match_parent"
                            android:layout_height="57dp"
                            android:hint="Enter years of work experience"
                            android:padding="8dp"
                            android:fontFamily="@font/poppins_light"
                            android:background="@android:color/transparent"/>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/prior_experience_heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Any prior experience with UI/UX &amp; Web Design"
                        android:textSize="15sp"
                        android:layout_marginBottom="8dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/black"
                        android:layout_marginTop="16dp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_background"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="8dp">

                        <EditText
                            android:id="@+id/ui_ux_experience_input"
                            android:layout_width="match_parent"
                            android:layout_height="57dp"
                            android:hint="Enter any prior experience"
                            android:padding="8dp"
                            android:fontFamily="@font/poppins_light"
                            android:background="@android:color/transparent"/>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/city_heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select City"
                        android:textSize="15sp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="8dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/black"
                        android:layout_marginTop="16dp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_background"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="8dp">

                        <Spinner
                            android:id="@+id/city_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="57dp"
                            android:background="@android:color/transparent"
                            android:padding="8dp"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/drop_down"
                            android:layout_gravity="right|center_vertical"
                            android:paddingRight="10dp"/>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/organization_heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="How did you hear about the course? "
                        android:textSize="15sp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="8dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/black"
                        android:layout_marginTop="16dp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_background"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="8dp">

                        <Spinner
                            android:id="@+id/hear_about_course_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="57dp"
                            android:background="@android:color/transparent"
                            android:padding="8dp"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/drop_down"
                            android:layout_gravity="right|center_vertical"
                            android:paddingRight="10dp"/>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="gamazing"
                android:textColor="@color/white"
                android:layout_marginTop="60dp"/>

        </LinearLayout>
    </ScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/apply_button_card"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">

        <Button
            android:id="@+id/Training_button"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:text="Apply"
