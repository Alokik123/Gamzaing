<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/onboarding_background"
    android:padding="20dp">

    <ImageView
        android:id="@+id/training_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/welcome_2_svg"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/training_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:text="Welcome!!"
        android:textSize="27sp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/black" />


    <TextView
        android:id="@+id/phone_number_text_line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_light"
        android:gravity="center"
        android:layout_marginTop="0dp"
        android:text="An OTP has been sent by us to your "
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/phone_number_text_line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="number"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_light"
        android:textColor="@color/black"
        android:gravity="center" />

    <TextView
        android:id="@+id/phone_number_text_line3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter the OTP:"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_marginStart="24dp"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_light"
        android:textColor="@color/black"
        android:gravity="left" />

    <!-- OTP Input Fields -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center">

        <EditText
            android:id="@+id/otp_digit_1"
            android:layout_width="42dp"
            android:layout_height="48dp"
            android:background="@drawable/circle_background"
            android:gravity="center"
            android:hint="#"
            android:textAlignment="center"
            android:inputType="number"
            android:maxLength="1" />

        <EditText
            android:id="@+id/otp_digit_2"
            android:layout_width="42dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/circle_background"
            android:gravity="center"
            android:hint="#"
            android:textAlignment="center"
            android:inputType="number"
            android:maxLength="1" />

        <EditText
            android:id="@+id/otp_digit_3"
            android:layout_width="42dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/circle_background"
            android:gravity="center"
            android:textAlignment="center"
            android:hint="#"
            android:inputType="number"
            android:maxLength="1" />

        <EditText
            android:id="@+id/otp_digit_4"
            android:layout_width="42dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/circle_background"
            android:gravity="center"
            android:textAlignment="center"
            android:hint="#"
            android:inputType="number"
            android:maxLength="1" />

        <EditText
            android:id="@+id/otp_digit_5"
            android:layout_width="42dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/circle_background"
            android:gravity="center"
            android:textAlignment="center"
            android:inputType="number"
            android:hint="#"
            android:maxLength="1" />

        <EditText
            android:id="@+id/otp_digit_6"
            android:layout_width="42dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/circle_background"
            android:textAlignment="center"
            android:hint="#"

            android:inputType="number"
            android:maxLength="1" />
    </LinearLayout>

    <!-- Verify OTP Button -->
    <Button
        android:id="@+id/verify_otp_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Verify OTP"
        android:textSize="16sp"
        style="@style/AppButtonStyle"
        android:layout_marginTop="24dp"
        android:textColor="@color/white"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/poppins_medium"
        android:background="@drawable/button" />

    <!-- Resend OTP TextView -->
    <TextView
        android:id="@+id/resend_otp_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Resend OTP (20s)"
        android:textSize="16sp"
        android:gravity="left"
        android:layout_marginLeft="24dp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/black"
        android:clickable="true"
        android:onClick="resendOtp" />

</LinearLayout>
